---
import TenureTimer from './TenureTimer';

interface Props {
  coachImage: string;
  opponentImage: string;
  coachName: string;
  opponentName: string;
  statusLevel: number;
}

const { coachImage, opponentImage, coachName, opponentName, statusLevel } = Astro.props;

// Frequency Bar Calculation (Visual only)
const frequency = (140.00 + (statusLevel / 100)).toFixed(2);
---

<div class="w-full max-w-4xl mx-auto p-4 flex flex-col items-center justify-center min-h-[80vh]">
    
    <!-- TOP BAR (PTT) -->
    <div class="w-full flex justify-between items-end border-b-2 border-codec-green pb-1 mb-4 opacity-80 px-2">
       <span class="text-sm md:text-xl">CALL ING...</span>
       <span class="text-2xl md:text-4xl font-bold tracking-widest text-glow">FREQ {frequency}</span>
    </div>

    <!-- MAIN VERTICAL STACK -->
    <div class="w-full flex flex-col gap-4">
        
        <!-- BLOCK 1: COACH (HERO) -->
        <div class="w-full aspect-[4/3] md:aspect-video relative border-y-4 border-codec-green bg-black group overflow-hidden">
             <!-- HUD BARS (Top Overlay) -->
             <div class="absolute top-4 left-4 z-20 flex flex-col gap-2 opacity-95 w-1/2">
                <!-- SALUD DE ENTRENADOR (Health Bar) -->
                <div class="w-full bg-black/90 h-6 border-2 border-codec-green relative shadow-[0_0_10px_rgba(0,255,0,0.5)]">
                    <span class="absolute inset-0 flex items-center justify-center text-[10px] tracking-widest font-bold z-10 text-codec-green uppercase drop-shadow-[0_0_2px_black]">Salud</span>
                    <!-- Solid green health bar -->
                    <div class="h-full bg-codec-green absolute left-0 top-0 transition-all duration-1000" style={`width: ${100 - statusLevel}%;`}></div>
                </div>
                <!-- Secondary Status Bar -->
                <div class="w-full bg-codec-dim h-1 border border-codec-green relative flex gap-0.5 opacity-60">
                    {Array.from({ length: 20 }).map(() => (
                        <div class="h-full bg-codec-green flex-1 opacity-50"></div>
                    ))}
                </div>
             </div>

             <!-- IMAGE -->
             <img 
                src={coachImage} 
                class="w-full h-full object-cover grayscale transition-all duration-500"
                style="filter: grayscale(100%) sepia(100%) hue-rotate(80deg) saturate(300%) contrast(1.2);"
            />
            
            <!-- Scanlines -->
            <div class="absolute inset-0 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_2px,3px_100%] pointer-events-none z-10"></div>

            <!-- NAME TAG + RESULTS (Bottom Overlay) -->
            <div class="absolute bottom-4 left-4 right-4 z-20 flex justify-between items-end">
                <div class="bg-codec-dark/90 px-3 py-1 border border-codec-green text-sm md:text-lg font-bold tracking-wider">
                    EL ESPARTANO (ARBELOA)
                </div>
                <!-- RECENT RESULTS (Moved Inside) -->
                <div class="flex gap-2 bg-codec-dark/90 px-2 py-1 border border-codec-green">
                     <slot name="results-mini" />
                </div>
            </div>
        </div>

        <!-- BLOCK 2: TIMER (CENTER) -->
        <div class="w-full py-8 flex flex-col items-center justify-center relative bg-codec-dark border-x-2 border-codec-green/30">
             <div class="text-xs tracking-[0.4em] text-codec-green/60 mb-2 uppercase">Tiempo en el Banquillo</div>
             <TenureTimer client:load startDate="2026-01-12T10:00:00Z" />
             <!-- Frequency visual -->
             <div class="flex items-end gap-1 h-8 mt-4 opacity-50">
                <div class="w-1 bg-codec-green animate-[bounce_1s_infinite] h-full"></div>
                <div class="w-1 bg-codec-green animate-[bounce_1.5s_infinite] h-[60%]"></div>
                <div class="w-1 bg-codec-green animate-[bounce_0.8s_infinite] h-[80%]"></div>
                <div class="w-1 bg-codec-green animate-[bounce_1.2s_infinite] h-[40%]"></div>
             </div>
        </div>

        <!-- BLOCK 3: RIVAL (BOTTOM) -->
        <div class="w-full aspect-[4/3] md:aspect-video relative border-2 border-codec-green bg-black overflow-hidden">
             <!-- RIVAL IMAGE (Full Cover) -->
             <img 
                src={opponentImage} 
                class="w-full h-full object-cover grayscale"
                style="filter: grayscale(100%) sepia(100%) hue-rotate(80deg) saturate(300%) contrast(1.2);"
             />
             
             <!-- Scanlines -->
             <div class="absolute inset-0 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_2px,3px_100%] pointer-events-none z-10"></div>

             <!-- NAME TAG + RESULTS (Bottom Overlay) -->
             <div class="absolute bottom-4 left-4 right-4 z-20 flex justify-between items-end">
                 <div class="bg-codec-dark/90 px-3 py-1 border border-codec-green text-sm md:text-lg font-bold tracking-wider">
                     RIVAL: {opponentName}
                 </div>
                 <!-- RIVAL RESULTS (Overlaid) -->
                 <div class="flex flex-col gap-0.5 bg-codec-dark/90 px-2 py-1 border border-codec-green">
                     <slot name="rival-results" />
                 </div>
             </div>
        </div>

    </div>

    <!-- SUBTITLES (Context) -->
    <div class="w-full mt-4 min-h-[80px] border-t border-codec-green bg-black/60 p-4 font-mono text-sm leading-relaxed text-center opacity-80">
        <slot name="subtitles" />
    </div>

</div>
