---
import TenureTimer from './TenureTimer';

interface Props {
  coachImage: string;
  opponentImage: string;
  coachName: string;
  opponentName: string;
  statusLevel: number;
}

const { coachImage, opponentImage, coachName, opponentName, statusLevel } = Astro.props;

// Frequency Bar Calculation (Visual only)
const frequency = (140.00 + (statusLevel / 100)).toFixed(2);
---

<div class="w-full max-w-4xl mx-auto p-4 flex flex-col items-center justify-center min-h-[80vh]">
    
    <!-- TOP BAR (PTT) -->
    <div class="w-full flex justify-between items-end border-b-2 border-codec-green pb-1 mb-4 opacity-80 px-4">
       <span class="text-xl">CALL ING...</span>
       <span class="text-4xl font-bold tracking-widest text-glow">FREQ {frequency}</span>
    </div>

    <!-- MAIN CODEC WINDOW -->
    <div class="w-full grid grid-cols-3 gap-1 h-[300px] md:h-[400px] bg-black/40 border-y-4 border-codec-green relative">
        
        <!-- LEFT: COACH -->
        <div class="h-full border-r-2 border-codec-green relative overflow-hidden group">
            <img 
                src={coachImage} 
                class="w-full h-full object-cover grayscale brightness-75 contrast-125 sepia-0 hue-rotate-[90deg] saturate-[3] group-hover:brightness-100 transition-all duration-500"
                style="filter: grayscale(100%) sepia(100%) hue-rotate(80deg) saturate(300%) contrast(1.2);"
            />
            <div class="absolute bottom-2 left-2 bg-codec-dark/80 px-2 py-1 border border-codec-green text-xs">
                {coachName}
            </div>
             <!-- Scanline Overlay for Image -->
             <div class="absolute inset-0 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_2px,3px_100%] pointer-events-none"></div>
        </div>

        <!-- CENTER: DATA -->
        <div class="h-full flex flex-col items-center justify-center relative bg-codec-dark p-2 overflow-hidden">
            <!-- Audio Waves Animation -->
             <div class="flex items-end gap-1 h-16 mb-6">
                <div class="w-2 bg-codec-green animate-[bounce_1s_infinite] h-8"></div>
                <div class="w-2 bg-codec-green animate-[bounce_1.2s_infinite] h-12"></div>
                <div class="w-2 bg-codec-green animate-[bounce_0.8s_infinite] h-10"></div>
                <div class="w-2 bg-codec-green animate-[bounce_1.5s_infinite] h-14 bg-white/80 shadow-[0_0_10px_white]"></div>
                <div class="w-2 bg-codec-green animate-[bounce_0.9s_infinite] h-8"></div>
                <div class="w-2 bg-codec-green animate-[bounce_1.1s_infinite] h-6"></div>
             </div>

             <!-- TIMER ISLAND -->
             <TenureTimer client:load startDate="2021-06-01T12:00:00Z" />

             <div class="mt-4 w-full px-4">
                <div class="text-center text-xs mb-1">PROBABILIDAD DESPIDO</div>
                <div class="w-full bg-codec-dim h-4 border border-codec-green relative">
                    <div class="h-full bg-codec-green absolute left-0 top-0 transition-all duration-1000" style={`width: ${statusLevel}%`}></div>
                </div>
             </div>
        </div>

        <!-- RIGHT: OPPONENT -->
        <div class="h-full border-l-2 border-codec-green relative overflow-hidden group">
            <img 
                src={opponentImage} 
                class="w-full h-full object-contain p-8 grayscale brightness-75 contrast-125 sepia-0 hue-rotate-[90deg] saturate-[3]"
                style="filter: grayscale(100%) sepia(100%) hue-rotate(80deg) saturate(300%) contrast(1.2);"
            />
             <div class="absolute bottom-2 right-2 bg-codec-dark/80 px-2 py-1 border border-codec-green text-xs text-right">
                {opponentName}
            </div>
             <!-- Scanline Overlay for Image -->
             <div class="absolute inset-0 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_2px,3px_100%] pointer-events-none"></div>
        </div>

    </div>

    <!-- BOTTOM: SUBTITLES -->
    <div class="w-full mt-4 min-h-[100px] border-t-2 border-codec-green bg-black/60 p-4 font-mono text-xl leading-relaxed animate-pulse">
        <slot name="subtitles" />
    </div>

</div>
