---
interface Match {
    opponent: string;
    result?: string; // W, D, L
    score?: string;
    date?: string;
    competition?: string;
}

interface Props {
    lastMatch: Match;
    nextMatch: Match;
}

const { lastMatch, nextMatch } = Astro.props;

const getResultColor = (result?: string) => {
    if (result === 'W') return 'bg-green-100 text-green-700 border-green-200';
    if (result === 'L') return 'bg-red-100 text-red-700 border-red-200';
    return 'bg-gray-100 text-gray-700 border-gray-200';
};
---

<div class="grid grid-cols-2 gap-4">
    <!-- Last Match -->
    <div class={`rounded-lg p-4 border ${getResultColor(lastMatch.result)} flex flex-col justify-between h-full`}>
        <h3 class="text-[10px] uppercase tracking-widest opacity-70 font-bold">Último Partido</h3>
        <div class="mt-2">
            <p class="font-bold text-sm leading-tight">{lastMatch.opponent}</p>
            <p class="text-xl font-black mt-1">{lastMatch.score}</p>
        </div>
    </div>

    <!-- Next Match -->
    <div class="rounded-lg p-4 border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 flex flex-col justify-between h-full">
         <h3 class="text-[10px] uppercase tracking-widest text-gray-500 font-bold">Próximo Rival</h3>
         <div class="mt-2">
            <p class="font-bold text-sm leading-tight text-gray-900 dark:text-white">{nextMatch.opponent}</p>
            <p class="text-xs text-gray-500 mt-1">
                {new Date(nextMatch.date!).toLocaleDateString('es-ES', { weekday: 'short', day: 'numeric', month: 'short' })}
            </p>
        </div>
    </div>
</div>
